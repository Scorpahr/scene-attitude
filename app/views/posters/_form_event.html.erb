<div class="bg-form ">
  <%= simple_form_for Event.new do |f| %>
    <div class="form-type">
      <%= f.input :date, label: "Dates de l'événement :", placeholder: "JJ/MM/AAAA à XXHXX" %>
    </div>

    <div class="form-type">
      <%= f.input :picture, as: :file, label: "Ajouter une affiche :" %>
    </div>

    <div class="form-type">
      <label>* Description de l'événement :</label><br>
      <%= f.text_area :description, label: "Description de l'événement :", id: 'textarea' %>
    </div>

    <div class="txt-col button-env">
      <%= f.submit "Ajouter" %>
    </div>
  <% end %>
</div>
