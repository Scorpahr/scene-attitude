<div class="container">
  <form >
    <div class="row">
      <div class="col-25">
        <label for="dateofevent">Date de l'événement</label>
      </div>
      <div class="col-75">
        <input type="date" id="dateofevent" name="dateofevent" placeholder="Date..">
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="file">Affiche</label>
      </div>
      <div class="col-75">
        <input type="file" id="file" name="file" accept="image/png, image/jpeg" />
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="subject">Description</label>
      </div>
      <div class="col-75">
        <textarea id="subject" name="subject" placeholder="Déscription de l'événement.." style="height:200px"></textarea>
      </div>
    </div>
    <br>
    <div class="row">
      <input type="submit" value="Enregistrer">
    </div>
  </form>
</div>
